#include<stdio.h>
int main(){
    int i,sum=0,n;
    printf("enter a number");
    scanf("%d",&n);
    for(i=1;i<n;i++)//28%1=0corr,28%2=0cor,28%3=1wrong
    {
        if(n%i==0)
        sum=sum+i;// only condition stafied i.e factors are add to sum
    }
if(n==sum)
    printf("the number is perfect square");//after sum will contain all addition of factors if its equal to given number it is perfect square number
else
printf("the number is not a perfect square");
}
//////////////////////////////////
eg:n=28
factors=1,2,4,7,14
28%1==0.............
sum=1+2+4+7+14
=28
sum=n
28=28
hence perfect square
